@model IEnumerable<EmployeeManagement.Models.Payroll>


@{
    ViewBag.Title = "Index";
}



<style>
    .label1 {
        font-size: 36px;
        color: chocolate;
        font-family: Arial;
        font-weight: bold;
        display: block;
    }

    table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        border: 1px solid black;
        overflow: hidden;
        background: white;
        border-radius: 6px;
        box-shadow: 0 0 20px rgba(0,0,0,0.1);
        opacity: 1;
    }

    td, th {
        border: 1px solid #dddddd;
        text-align: left;
        font-weight: bold;
        padding: 13px;
        border-bottom: 1px solid #dddddd;
    }


    body {
        height: 100%;
    }

    body {
        margin: 0;
        background: linear-gradient(45deg, #49a09d, #5f2c82);
        font-family: sans-serif;
        font-weight: 100;
    }

    .form-horizontal {
        border-radius: 6px;
        box-shadow: 0 0 20px rgba(0,0,0,0.1);
        opacity: 1;
        background: transparent;
        padding: 13px;
        font-weight: bold;
      

    }
    .no-color {
        font-size: 23px;
        color: chocolate;
        font-family: Arial;
        font-weight: bold;
        display: block;
    }
</style>
<br />
@Html.Label("Payroll", new { @class = "label1" })



    @using (Html.BeginForm("Index", "Payrolls1", FormMethod.Post))
    {

        <div class="form-horizontal">
            <span>Start Date</span>
            <input required type="date" name="Start" /> <hr />
            <span>End Date</span>
            <input required type="date" name="End" /><hr />
            <span>EmployeeID</span>
            <input required type="text" id="emID" name="EmployeeID" />
            <input required type="submit" value="GetRecord" />

        </div>


    }





    <br />
    <p>
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
    </p>
    <div class="table-responsive">

        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.EmployeeID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Fname)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Daily_Salary)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Annul_salary)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmployeeID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Daily_Salary)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Annul_salary)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.PayrollID }, new { @class = "btn btn-warning" }) |
                        @Html.ActionLink("Details", "Details", new { id = item.PayrollID }, new { @class = "btn btn-success" }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.PayrollID }, new { @class = "btn btn-danger" })

                </tr>
            }

        </table>

        @{
            var p = ViewBag.PayrollRecord;
        }

        @{
            try
            {
                if (TempData["msg1"] != null)
                {
                    <script>
                        swal("Tony's Employee", "Incorrect EmployeeID", "info");
                    </script>
                }
                else
                {

                    <div class="no-color">
                        TotalPay : $@p.totalPay
                    </div>
                }

            }
            catch
            {

            }
        }

    </div>


